<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.inclass03.BurgerFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_burger_type"
        android:text="@string/burger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radio_burger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_burger_single"
            android:text="@string/burger_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_burger_double"
            android:text="@string/burger_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    </LinearLayout>

</LinearLayout>
